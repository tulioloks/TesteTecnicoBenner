<Window x:Class="TesteTecnicoBenner.Views.Pessoas.PessoaEdicaoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Pessoa"
        Height="320" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Nome -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Nome:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtNome" Grid.Row="0" Grid.Column="1" Width="300" Margin="5" HorizontalAlignment="Left"/>

        <!-- CPF -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="CPF:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtCPF"
                 Grid.Row="1"
                 Grid.Column="1"
                 Width="200"
                 Margin="5"
                 HorizontalAlignment="Left"
                 PreviewTextInput="txtCPF_PreviewTextInput"
                 DataObject.Pasting="txtCPF_Pasting"/>

        <!-- Endereço -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Endereço:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtEndereco" Grid.Row="2" Grid.Column="1" Width="300" Margin="5" HorizontalAlignment="Left"/>

        <!-- Botões -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Salvar" Width="100" Margin="5" Click="Salvar_Click"/>
            <Button Content="Cancelar" Width="100" Margin="5" Click="Cancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
