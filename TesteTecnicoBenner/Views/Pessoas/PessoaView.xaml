<Window x:Class="TesteTecnicoBenner.Views.Pessoas.PessoaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Pessoas"
        Height="720" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Filtros -->
            <RowDefinition Height="Auto"/>
            <!-- Botões -->
            <RowDefinition Height="Auto"/>
            <!-- Grid de Pessoas -->
            <RowDefinition Height="Auto"/>
            <!-- Filtro de pedidos -->
            <RowDefinition Height="*"/>
            <!-- Grid de Pedidos -->
        </Grid.RowDefinitions>

        <!-- Filtros de Pessoa -->
        <GroupBox Header="Filtros de Pessoa" Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="10">
                <StackPanel Margin="5">
                    <TextBlock Text="Nome"/>
                    <TextBox x:Name="txtNomeFiltro" Width="180" ToolTip="Filtrar por nome"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="CPF"/>
                    <TextBox x:Name="txtCPFFiltro"
                             Width="180"
                             ToolTip="Filtrar por CPF"
                             PreviewTextInput="txtCPFFiltro_PreviewTextInput"
                             DataObject.Pasting="txtCPFFiltro_Pasting"/>
                </StackPanel>
                <Button Content="Filtrar" Width="100" Margin="10,20,0,0" Click="Filtrar_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- Botões de Ação -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button Content="Incluir" Width="100" Margin="5" Click="Incluir_Click"/>
            <Button Content="Editar" Width="100" Margin="5" Click="Editar_Click" x:Name="btnEditar" IsEnabled="False"/>
            <Button Content="Excluir" Width="100" Margin="5" Click="Excluir_Click"/>
            <Button Content="Incluir Pedido" Width="120" Margin="5" Click="IncluirPedido_Click"/>
        </StackPanel>

        <!-- Grid de Pessoas -->
        <GroupBox Header="Lista de Pessoas" Grid.Row="2" Margin="0,0,0,10">
            <DataGrid x:Name="dgPessoas"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionChanged="dgPessoas_SelectionChanged"
                      Height="250"
                      Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="200"/>
                    <DataGridTextColumn Header="CPF" Binding="{Binding CPF}" Width="150"/>
                    <DataGridTextColumn Header="Endereço" Binding="{Binding Endereco}" Width="300"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Filtro e ações de pedidos -->
        <GroupBox Header="Ações sobre Pedidos" Grid.Row="3" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Filtrar por status:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="cbFiltroStatus" Width="150" SelectionChanged="cbFiltroStatus_SelectionChanged">
                    <ComboBoxItem Content="Todos" IsSelected="True"/>
                    <ComboBoxItem Content="Pendente"/>
                    <ComboBoxItem Content="Pago"/>
                    <ComboBoxItem Content="Enviado"/>
                    <ComboBoxItem Content="Recebido"/>
                </ComboBox>

                <Button Content="Marcar como Pago" Margin="20,0,0,0" Click="MarcarComoPago_Click"/>
                <Button Content="Marcar como Enviado" Margin="5,0,0,0" Click="MarcarComoEnviado_Click"/>
                <Button Content="Marcar como Recebido" Margin="5,0,0,0" Click="MarcarComoRecebido_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- Grid de Pedidos -->
        <GroupBox Header="Pedidos da Pessoa Selecionada" Grid.Row="4">
            <DataGrid x:Name="dgPedidosPessoa"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Margin="5"
                      Height="180">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Data da Venda" Binding="{Binding DataVenda, StringFormat=d}" Width="120"/>
                    <DataGridTextColumn Header="Valor Total" Binding="{Binding ValorTotal, StringFormat=F2}" Width="120"/>
                    <DataGridTextColumn Header="Forma de Pagamento" Binding="{Binding FormaPagamento}" Width="150"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</Window>
