<Window x:Class="TesteTecnicoBenner.Views.Produtos.ProdutoIncluirView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Novo Produto"
        Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Nome -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Nome do Produto:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtNome" Grid.Row="0" Grid.Column="1" Width="200" Margin="5" HorizontalAlignment="Left"/>

        <!-- Valor -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Valor:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtValor"
         Grid.Row="1"
         Grid.Column="1"
         Width="100"
         Margin="5"
         HorizontalAlignment="Left"
         PreviewTextInput="txtValor_PreviewTextInput"/>


        <!-- Código -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Código:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtCodigo" Grid.Row="2" Grid.Column="1" Width="150" Margin="5" HorizontalAlignment="Left"/>

        <!-- Botões -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Salvar" Width="100" Margin="5" Click="Salvar_Click"/>
            <Button Content="Cancelar" Width="100" Margin="5" Click="Cancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
